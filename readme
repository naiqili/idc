/opt/lampp/etc/httpd.conf

526<Directory /opt/lampp/htdocs/idc/cgi-bin>
527    AllowOverride Options Indexes FileInfo Limit
528    AddType application/xhtml+xml .xhtml
529    AddType font/ttf .ttf
530    # For CGI support                                                        
531    AddHandler cgi-script .cgi .py .sh
532</Directory>
ScriptAlias /cgi-bin/ "/opt/lampp/htdocs/idc/cgi-bin"
